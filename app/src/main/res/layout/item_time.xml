<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <!--左-->
        <LinearLayout
            android:id="@+id/ll_time_left"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--内容-->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_width="90dp"
                    android:layout_height="24dp">
                    <LinearLayout
                        android:background="@drawable/bg_time_2"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:textSize="8sp"
                            android:text="参赛报名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_time_l1"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1-3月"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                        <View
                            android:background="#666666"
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="90dp"
                    android:layout_height="24dp">
                    <LinearLayout
                        android:background="@drawable/bg_time_2"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:textSize="8sp"
                            android:text="校赛报名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_time_l2"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1-3月"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="20dp"
                        android:layout_height="match_parent">
                        <View
                            android:background="#666666"
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="90dp"
                    android:layout_height="24dp">
                    <LinearLayout
                        android:background="@drawable/bg_time_2"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:textSize="8sp"
                            android:text="省赛报名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_time_l3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1-3月"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="20dp"
                        android:layout_height="match_parent">
                        <View
                            android:background="#666666"
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="90dp"
                    android:layout_height="24dp">
                    <LinearLayout
                        android:background="@drawable/bg_time_2"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:textSize="8sp"
                            android:text="全国赛报名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_time_l4"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1-3月"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="20dp"
                        android:layout_height="match_parent">
                        <View
                            android:background="#666666"
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">
                <View
                    android:background="#666666"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent">
                <View
                    android:background="#666666"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </LinearLayout>
        <!--中-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <!--上-->
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <View
                    android:background="#666666"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <!--title-->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_time_1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/tv_time_title"
                    android:gravity="center"
                    android:text="数学建模大赛"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <!--下-->
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="#666666"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <!--右-->
        <LinearLayout
            android:id="@+id/ll_time_right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent">
                <View
                    android:background="#666666"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">
                <View
                    android:background="#666666"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"/>
            </LinearLayout>
            <!--内容-->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_width="90dp"
                    android:layout_height="24dp">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                        <View
                            android:background="#666666"
                            android:layout_width="10dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/bg_time_2"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:textSize="8sp"
                            android:text="参赛报名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_time_r1"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1-3月"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="90dp"
                    android:layout_height="24dp">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                        <View
                            android:background="#666666"
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/bg_time_2"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:textSize="8sp"
                            android:text="校赛报名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_time_r2"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="4月12日"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="90dp"
                    android:layout_height="24dp">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                        <View
                            android:background="#666666"
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/bg_time_2"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:textSize="8sp"
                            android:text="省赛报名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_time_r3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="5月1日"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="90dp"
                    android:layout_height="24dp">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="10dp"
                        android:layout_height="match_parent">
                        <View
                            android:background="#666666"
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/bg_time_2"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:textSize="8sp"
                            android:text="全国赛报名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_time_r4"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="6月26日"
                            android:textSize="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>