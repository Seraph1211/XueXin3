<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#eeeeee"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".f4.MyBasicData">
    <androidx.appcompat.widget.Toolbar
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:text="个人信息"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="#FFFFFF"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_weight="2"
                        android:layout_margin="10dp"
                        android:id="@+id/riv_bd_img"
                        android:src="@drawable/img_login_touxiang"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:background="#FFFFFF"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="#991296db"
                            android:gravity="center"
                            android:text="昵称"
                            android:layout_width="70dp"
                            android:layout_height="match_parent" />
                        <EditText
                            android:textSize="14sp"
                            android:id="@+id/et_bd_nickName"
                            android:text="昵称"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="90dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:background="#FFFF"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="#991296db"
                            android:gravity="center"
                            android:text="性别"
                            android:layout_width="70dp"
                            android:layout_height="match_parent" />
                        <EditText
                            android:textSize="14sp"
                            android:id="@+id/et_bd_gender"
                            android:text="男/女"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="90dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#991296db"
                    android:gravity="center"
                    android:text="学校"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:textSize="14sp"
                    android:id="@+id/et_bd_school"
                    android:text="学校"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#991296db"
                    android:gravity="center"
                    android:text="专业"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:textSize="14sp"
                    android:id="@+id/et_bd_major"
                    android:text="专业"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#991296db"
                    android:gravity="center"
                    android:text="手机号码"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:textSize="14sp"
                    android:id="@+id/et_bd_phone"
                    android:text="手机"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#991296db"
                    android:gravity="center"
                    android:text="签名"
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:textSize="14sp"
                    android:id="@+id/et_bd_signature"
                    android:text="签名"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="60dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:background="#FFFFFF"
                    android:id="@+id/bt_bd_save"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="保存更新"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <Button
                    android:background="#FFFFFF"
                    android:id="@+id/bt_bd_exit"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="直接退出"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>