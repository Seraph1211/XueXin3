<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/style_all"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--个人信息-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <!--头像-->
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_weight="1"
            android:id="@+id/img_f2_img"
            android:layout_margin="5dp"
            android:src="@drawable/img_f2_z4"
            android:layout_gravity="center"
            app:riv_oval="true"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <!--剩下-->
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_f2_nicheng"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    android:text="昵称"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/care"
                    android:layout_width="30dp"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:src="@drawable/more"
                    android:layout_width="30dp"
                    android:layout_height="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_f2_time"
                    android:gravity="left|center"
                    android:textSize="12sp"
                    android:text="2019.8.23"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_f2_say"
                    android:gravity="left|center"
                    android:textSize="12sp"
                    android:text="say"
                    android:layout_width="match_parent"
                    android:layout_height="33dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!--内容-->
    <LinearLayout
        android:id="@+id/ll_f2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:layout_margin="4dp"
            android:gravity="left|center"
            android:id="@+id/tv_f2_title"
            android:textSize="18sp"
            android:text="这是标题"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:layout_margin="8dp"
            android:id="@+id/tv_f2_content"
            android:text="这是预览"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
       <LinearLayout
           android:layout_marginTop="2dp"
           android:layout_width="match_parent"
           android:layout_height="30dp">
           <TextView
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
           <ImageView
               android:id="@+id/img_f2_dianzan"
               android:src="@drawable/dianzan"
               android:layout_width="16dp"
               android:layout_height="16dp" />
           <TextView
               android:layout_marginLeft="10dp"
               android:id="@+id/tv_f2_zan"
               android:textSize="12sp"
               android:text="234"
               android:layout_width="50dp"
               android:layout_height="20dp" />
           <ImageView
               android:src="@drawable/pinglun"
               android:layout_width="16dp"
               android:layout_height="16dp"/>
           <TextView
               android:textSize="12sp"
               android:text="234"
               android:layout_marginLeft="10dp"
               android:id="@+id/tv_f2_ping"
               android:layout_width="50dp"
               android:layout_height="20dp" />
           <ImageView
               android:src="@drawable/fenxiang"
               android:layout_width="16dp"
               android:layout_height="16dp" />
           <TextView
               android:layout_marginLeft="10dp"
               android:textSize="12sp"
               android:text="分享"
               android:layout_width="50dp"
               android:layout_height="20dp" />
       </LinearLayout>
    </LinearLayout>

</LinearLayout>
